{% extends "layout.njk" %}

{% block content %}
   <div class="card table-container">
      <table width="100%">
        <thead> <!-- cabeçalho -->
            <tr> <!-- linha -->
                <th>Instructor</th> <!-- coluna -->
                <th>Atendimento</th>
                <th>Ação</th>
            </tr>
        </thead>
        <tbody>
        {% for instructor in instructors %}
            <tr>
                <td>{{instructor.name}}</td> <!-- coluna do tbody diferente da coluna do thead -->
                <td>{{instructor.services}}</td>
                <td><a href="/instructors/{{instructor.id}}">ver</a></td>
            </tr>
        {% endfor %}
        </tbody>
      
      </table>  
   </div>
{% endblock content %}